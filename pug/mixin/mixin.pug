mixin redirect
	.row.main_top
		-for(var i=0;i<redirect.length;i++)
			a(href=redirect[i]["href"])=redirect[i]["name"] +'/'

mixin redirect_page(value1,content1,value2,content3,value3)
	.row.main_top
			a(href="#")= value1 + '/'
			if content1
				a(href="#")= value2 + '/'
			else
				a(href="#")= value2	
			if content3
				a(href="#")= value3

